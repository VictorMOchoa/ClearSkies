<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    tools:background="@drawable/bg_gradient">

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/time_tv"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        tools:text="12 PM"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_iv"
        android:src="@drawable/partly_cloudy"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/degrees_tv"
        android:layout_toStartOf="@+id/degrees_tv"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_tv"
        android:text="Party Cloudy"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/time_tv"
        android:layout_toRightOf="@+id/time_tv"
        android:layout_toEndOf="@+id/time_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/degrees_tv"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:text="100"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/description_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>